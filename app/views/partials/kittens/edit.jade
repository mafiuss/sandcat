div(ng-controller='KittensController', ng-init='findOne()')
  form.form-horizontal(name='kittenForm', role='form', ng-submit='update()')
    .form-group
      label.col-md-3.control-label name
      .col-md-6
        input.form-control(type='text', ng-model='kitten.name', placeholder='title',  required)
    .form-group
      .col-md-offset-3.col-md-6
        button(class='btn btn-default') Submit
